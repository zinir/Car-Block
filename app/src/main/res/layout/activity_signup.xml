<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivityOld"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="1"
        android:useDefaultMargins="true">

        <com.projects.nir.myapplication.ThirdParty.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signup_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_user"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF336699"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpUserNameEditText"
            android:layout_column="0"
            android:hint="User Name"
            android:inputType="text"
            android:lines="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpUserFirstNameEditText"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="First Name"
            android:inputType="text"
            android:lines="1"
            android:layout_rowWeight="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signUpPasswordEditText"
            android:layout_column="0"
            android:layout_row="3"
            android:hint="Password"
            android:lines="1"
            android:layout_rowWeight="1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_"/>

        <Button
            android:id="@+id/signUpProfileImageButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Profile Image"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Sign Up"
            android:layout_row="5"
            android:layout_column="0" />


    </GridLayout>
</LinearLayout>
